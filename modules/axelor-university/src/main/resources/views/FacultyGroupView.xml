<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">

    <grid name="faculty-group-grid"
          title="Faculty Group grid"
          model="com.axelor.university.db.FacultyGroup">
        <field name="name" />
        <field name="faculty" />
        <field name="maxStudents" />
        <field name="finished"/>
        <field name="room"/>
    </grid>

    <form name="faculty-group-form"
          title="Faculty Group"
          model="com.axelor.university.db.FacultyGroup">
        <panel name="overviewPanel" title="Overview">
            <field name="name" />
            <field name="faculty" />
            <field name="maxStudents" />
            <field name="finished"/>
            <field name="room"/>
        </panel>
        <panel name="sidePanel" sidebar="true">
            <field name="createdOn"/>
            <field name="createdBy"/>
            <field name="updatedOn"/>
            <field name="updatedBy"/>
        </panel>
    </form>

    <form name="faculty-group-form-popup"
          title="Faculty Groups"
          model="com.axelor.university.db.FacultyGroup">
        <panel title="Group info">
            <field name="name" />
            <field name="faculty" />
            <field name="maxStudents" />
            <field name="finished"/>
            <field name="room"/>
        </panel>
    </form>

</object-views>